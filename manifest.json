{
  "manifest_version": 3,
  "name": "ChatGPT TOC Manager",
  "version": "1.0",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "css": ["styles.css"],
      "js": [
        "utils/chromeStorage.js",
        "utils/urlHelper.js",
        "utils/styleHelper.js",
        "utils/eventHandlers.js",
        "utils/tocHelper.js",
        "utils/form.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["https://chat.openai.com/*"],
  "web_accessible_resources": [{
    "resources": ["utils/*.js"],
    "matches": ["<all_urls>"]
  }]
}
